#!/bin/sh
#
# init.conf functions
# ---------------------
# Functions that can be used in init.conf
#


## Daemon management
# Start a daemon
startd(){
    for daemon in $@; do
        /usr/rc.d/$1 start
    done;
}

# Start a daemon in the background
startbkgd(){
    for daemon in $@; do
        (/usr/rc.d/$daemon start) &> /dev/null &
    done;
}

# Stop a daemon
stopd(){
    for daemon in $@; do
        /usr/rc.d/$daemon stop
    done;
}

# Stop all daemons
stop_daemons(){
    for daemon in /var/run/daemons/*; do
        stopd $daemon
    done;
}

## Convenience functions
# Kill all processes
terminate_all(){
    /sbin/killall5 -15 &> /dev/null
    /bin/sleep 1
    /sbin/killall5 -9 &> /dev/null
    /bin/sleep 1
}

# Halt entire system
system_halt(){
    if [ "$RUNLEVEL" = "0"]; then
        /sbin/poweroff -d -f -h -i
    else
        /sbin/reboot -d -f -i
    fi
}
